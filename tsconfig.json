{
  "compilerOptions": {
    "target": "ES2016",
    "module": "CommonJS",
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true,
    "baseUrl": ".",
    "outDir": "./dist",
    "paths": {
      "@jobs/*": ["./src/jobs/*"],
      "@events/*": ["./src/events/*"],
      "@commands/*": ["./src/commands/*"],
      "@modules/*": ["./src/modules/*"],
      "@util/*": ["./src/util/*"],
      "@assets/*": ["./src/assets/*"],
      "@data/*": ["./src/data/*"],
      "@lib/*": ["./src/lib/*"]
    }
  }
}
